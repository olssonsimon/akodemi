<% provide(:title, 'Logga in') %>

<h1>Logga in</h1>

<div class="row">
	<div class="span6 offset3">
	<%= simple_form_for(:session, url: sessions_path) do |f| %>
		<%= f.input :email, label: 'Email' %>
		<%= f.input :password, label: 'Lösenord' %>

		<%= f.button :submit, 'Logga in', class: 'btn btn-large btn-primary' %>
	<% end %>

	<p>Ny på den här sidan? <%= link_to 'Gå med!', signup_path %></p>
	</div>
</div>